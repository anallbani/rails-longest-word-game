<h1>New game</h1>

<div>
  <% @letters.each do |letter| %>
    <span style="display: inline-block; padding: 10px; background-color: royalblue; color: white; margin: 5px; font-weight: bold; font-size: 24px;">
      <%= letter %>
    </span>
  <% end %>
</div>

<br>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join %>

  <label>What is the longest word you can find?</label>
  <input type="text" name="word" placeholder="Your word">
  <input type="submit" value="Play">
</form>
